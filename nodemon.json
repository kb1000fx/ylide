{
    "restartable": "rs",
    "ignore": [
        ".git",
        "node_modules/**/node_modules"
    ],
    "verbose": false,
    "env": {
        "NODE_ENV": "development"
    },
    "ext": "js,json,ts,njk",
    "watch": [
        "routes/",
        "views/",
        "middleware/"
    ],
    "execMap": {
        "ts": "node -r ts-node/register"
    }
}